<%- include('./layouts/header.ejs') %>
<div class="header">
    <h3>addProduct</h3>
</div>
<form class="add--product--container" action="/admin/add-product" method="POST" >
        <input type="text" name="title" placeholder="title">
        <input type="text" name="ISPN" placeholder="ISPN">
        <input type="number" name="price" placeholder="price">
        <textarea type="text" name="description" placeholder="description" rows = "10" style="resize: none;"></textarea>
        <textarea type="text" name="bookIntro" placeholder="book intro" rows = "10" style="resize: none;"></textarea>
        <input type="text" name="bookFormat" placeholder="bookFormat">
        <input type="text" name="categories" placeholder="categories">
        <input type="text" name="author" placeholder="author">
        <button type="submit">Submit</button>
</form>

